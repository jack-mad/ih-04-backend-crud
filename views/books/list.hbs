
    <h1 class="text-3xl font-extrabold tracking-tight sm:text-4xl mt-10 mb-3">Listado de libros</h1>
<a href="/books/create" class="text-3xl font-bold tracking-tight sm:text-xl mt-5 mb-5 text-indigo-800">Crear libro</a>


  <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">

    {{#each data}}
      <li
        class="col-span-1 bg-indigo-100 rounded-lg shadow divide-y divide-indigo-500"
      >
        <div class="w-full flex items-center justify-between p-6 space-x-6 ">
          <div class="flex-1 truncate ">
            <div class="flex items-center space-x-3">
              <h3
                class="text-gray-900 text-md font-medium truncate"
              >{{title}}</h3>
              <span
                class="flex-shrink-0 inline-block px-2 py-0.5 text-green-800 text-xs font-medium bg-green-100 rounded-full"
              >{{rating}}</span>
            </div>
            <p class="mt-1 text-gray-500 text-sm truncate">{{author}}</p>
          </div>
        </div>
        <div>
          <div class="-mt-px flex divide-x divide-indigo-500">
            <div class="w-0 flex-1 flex">
              <a
                href="/books/{{_id}}"
                class="relative -mr-px w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium border border-transparent rounded-bl-lg hover:text-gray-500"
              >
                <span class="ml-3">Ver libro</span>
              </a>
            </div>
            <div class="-ml-px w-0 flex-1 flex">
              <a
                href="/books/{{_id}}/edit"
                class="relative w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium border border-transparent rounded-br-lg hover:text-gray-500"
              >
                <span class="ml-3">Editar libro</span>
              </a>
            </div>
            <div class="-ml-px w-0 flex-1 flex">
              
                <form action="/books/{{_id}}/delete" method="POST">
                  <button class="relative w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium border border-transparent rounded-br-lg hover:text-gray-500 ml-12"> Eliminar libro </button>
                </form>
            </div>
          </div>
        </div>
      </li>
    {{/each}}
  </ul>
