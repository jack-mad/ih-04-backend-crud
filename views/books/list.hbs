    {{#each data }}
        <div>
            <h3> {{ title }}</h3>
            <a href="/books/{{_id}}">Ver libro</a>
            <a href="/books/{{_id}}/edit">Editar libro</a>
            <form action="/books/{{_id}}/delete" method="POST">
            <button> Eliminar libro </button>
            </form>
        </div>
    {{/each }}
